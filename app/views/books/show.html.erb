      <h2><%= @book.title %></h2>
      <p><%= @book.author %></p>
      <%=link_to("編集する","/books/#{@book.id}/edit")%>
      <%=link_to("削除する","/books/#{@book.id}/destroy",{method:"post"})%>

      <% if @book.user_id == nil%>
        <%= button_to "借りる", {controller: 'books', action: 'hello'}, {method: :post} %>
      <% elsif @book.user_id == @current_user.id %>
        <%= button_to "返す", {controller: 'books', action: 'bye'}, {method: :post} %>
      <% else %>
        在庫なし
      <% end %>
